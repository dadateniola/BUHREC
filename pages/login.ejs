<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Login</title>

    <%- include('partials/head') %>
</head>

<body>

    <%- include('partials/alert') %>
    <main>
        <%- include('partials/sidebar') %>
            <div class="form-box">
                <form class="form" action="/login" method="post">
                    <div class="heading">
                        <h1>Login to your account</h1>
                        <p>Welcome back! Log in to access your account effortlessly</p>
                    </div>
                    <div class="form-group">
                        <label for="email_phone">Email or Phone number</label>
                        <input type="text" name="email_phone" id="email_phone"
                            placeholder="Enter your email or phone number">
                    </div>
                    <div class="form-special">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" placeholder="Enter your password">
                        </div>
                        <div class="form-group extra">
                            <a href="" class="highlight">forgot password</a>
                        </div>
                        <div class="form-group">
                            <button type="submit">login</button>
                        </div>
                    </div>
                    <div class="form-group change">
                        <p>Don't have an account? <span class="highlight">Create an account</span></p>
                    </div>
                </form>
            </div>
    </main>

    <%- include('partials/foot') %>
    <script src="/scripts/login.js"></script>

</body>

</html>